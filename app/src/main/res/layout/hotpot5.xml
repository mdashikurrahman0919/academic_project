<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"
    android:padding="5dp"
    android:background="#83a774"
    >

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="377dp"
        android:layout_height="172dp"
        android:scaleType="fitXY"
        android:src="@drawable/northern_hotpot"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:background="#7c588b"
        android:gravity="center"
        android:text="@string/hot_pot13"
        android:textColor="#ffff33"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="390dp"
        android:layout_height="172dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/guizhou_soup_fish_hot_pot"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/sauerkraut_hotpot_with_white_meat"
        tools:layout_editor_absoluteX="5dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="68dp"
        android:background="#7c588b"
        android:gravity="center"
        android:text="@string/hot_pot14"
        android:textColor="#ffff33"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#7c588b"
        android:gravity="left"
        android:text="@string/about_hotpot"
        android:textColor="#ffff33"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="TextSizeCheck"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="first_food_list"
        android:text="@string/hot_pot16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView63"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>